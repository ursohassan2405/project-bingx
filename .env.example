# Enterprise Trading Bot Configuration
# ===================================

# BingX API Credentials
BINGX_API_KEY=your_api_key_here
BINGX_SECRET_KEY=your_secret_key_here

# Trading Configuration
# demo (VST) or real (USDT)
TRADING_MODE=demo
# conservative, moderate, aggressive
TRADING_RISK_PROFILE=moderate
TRADING_POSITION_SIZE_USD=10.0
TRADING_MAX_POSITIONS=10

# Risk Management
# 2%
TRADING_STOP_LOSS_PCT=0.02
# 6%
TRADING_TAKE_PROFIT_PCT=0.06
# 1%
TRADING_BREAK_EVEN_PCT=0.01
# 3.6%
TRADING_TRAILING_TRIGGER_PCT=0.036

# Technical Indicators
TRADING_RSI_PERIOD=13
TRADING_RSI_MIN=30
TRADING_RSI_MAX=80
TRADING_SMA_PERIOD=13
TRADING_MIN_CONFIDENCE=0.5

# Performance & API
TRADING_MAX_CONCURRENT_REQUESTS=10
TRADING_CACHE_TTL_SECONDS=300
TRADING_API_REQUESTS_PER_SECOND=10
TRADING_REQUEST_TIMEOUT=15

# Monitoring
TRADING_LOG_LEVEL=INFO
TRADING_SCAN_INTERVAL_SECONDS=30
TRADING_DASHBOARD_UPDATE_INTERVAL=2

# Timeframes
TRADING_PRIMARY_TIMEFRAME=4h
TRADING_CONFIRMATION_TIMEFRAME=2h
TRADING_BASE_INTERVAL=5m